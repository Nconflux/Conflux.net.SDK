<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(() => {
        $('#checkBalance').click(() => {

            let wallet = $('#wallet').val();
            $('body').addClass('widget-body-ajax-loading');
            $.ajax({
                type: "post",
                url: "/home/GetBalance",
                data: {
                    wallet: wallet
                },
                success: function (ret) {
                    $('body').removeClass('widget-body-ajax-loading');
                    $.smallBox({
                        title: "Success",
                        content: "操作成功.",
                        color: "#739E73",
                        timeout: 5000,
                        icon: "fa fa-check",
                    });

                    $('#balance').html(ret);
                }, fail: () => {
                    $('body').removeClass('widget-body-ajax-loading');
                    $.smallBox({
                        title: "Failed",
                        content: " 异常，请重试",
                        color: "#C46A69",

                        icon: "fa fa-warning shake animated",
                    });
                }
            });
        })

        $('#transfer').click(() => {
            $('body').addClass('widget-body-ajax-loading');
            let privateKey = $('#privateKey').val();
            let acceptWallet = $('#acceptWallet').val();
            let amount = $('#amount').val();
            $.ajax({
  
                type: "post",
                url: "/home/Transfer",
                data: {
                    privateKey: privateKey,
                    acceptWallet: acceptWallet,
                    amount: amount
                },
                success: function (ret) {
                    $('body').removeClass('widget-body-ajax-loading');

                    if (ret == 'ok') {
                        $.smallBox({
                            title: "Success",
                            content: "操作成功.",
                            color: "#739E73",
                            timeout: 5000,
                            icon: "fa fa-check",
                        });
                    } else {
                        $.smallBox({
                            title: "Failed",
                            content: "转账异常，请重试",
                            color: "#C46A69",

                            icon: "fa fa-warning shake animated",
                        });

                    }
                }, fail: () => {
                    $('body').removeClass('widget-body-ajax-loading');
                    $.smallBox({
                        title: "Failed",
                        content: " 异常，请重试",
                        color: "#C46A69",

                        icon: "fa fa-warning shake animated",
                    });
                }
            });
        })

        $('#deployContract').click(() => {
            $('body').addClass('widget-body-ajax-loading');
            let byteCode = $('#byteCode').val();
            let privateKey = $('#privateKey').val();
            let abi = $('#abi').val();
            $.ajax({
 
                type: "post",
                url: "/home/DeployContract",
                data: {
                    byteCode: byteCode,
                    privateKey: privateKey,
                    abi:abi
                },
                success: function (ret) {
                    $('body').removeClass('widget-body-ajax-loading');
                    $.smallBox({
                        title: "Success",
                        content: "操作成功.",
                        color: "#739E73",
                        timeout: 5000,
                        icon: "fa fa-check",
                    });
                    var url = 'https://testnet.confluxscan.io/address/' + ret + '?accountAddress=' + ret;
                    $('#contractAddress').html("<a target='_blank' href='" + url + "'>" + url + "</a>")
                    $('#contractSetAddress').val(ret)
                }, fail: () => {
                    $('body').removeClass('widget-body-ajax-loading');
                    $.smallBox({
                        title: "Failed",
                        content: " 异常，请重试",
                        color: "#C46A69",

                        icon: "fa fa-warning shake animated",
                    });
                }
            });
        })

        $('#applyContractSetValue').click(() => {
            $('body').addClass('widget-body-ajax-loading');
            let value = $('#contractSetValue').val();
            let privateKey = $('#privateKey').val();
            let contractSetAddress = $('#contractSetAddress').val();
            let abi = $('#abi').val();
            $.ajax({
     
                type: "post",
                url: "/home/ApplyContractSetValue",
                data: {
                    value: value,
                    privateKey: privateKey,
                    contractAddress: contractSetAddress,
                    abi: abi
                },
                success: function (ret) {
                    $.smallBox({
                        title: "Success",
                        content: "操作成功.",
                        color: "#739E73",
                        timeout: 5000,
                        icon: "fa fa-check",
                    });
                    $('body').removeClass('widget-body-ajax-loading');
                }, fail: () => {
                    $('body').removeClass('widget-body-ajax-loading');
                    $.smallBox({
                        title: "Failed",
                        content: " 异常，请重试",
                        color: "#C46A69",

                        icon: "fa fa-warning shake animated",
                    });
                }
            });
        })

        $('#applyContractGetValue').click(() => {
            $('body').addClass('widget-body-ajax-loading');
            let contractSetAddress = $('#contractSetAddress').val();
            let abi = $('#abi').val();
            $.ajax({
    
                type: "post",
                url: "/home/ApplyContractGetValue",
                data: {
                    contractAddress: contractSetAddress,
                    abi: abi
                },
                success: function (ret) {
                    $.smallBox({
                        title: "Success",
                        content: "操作成功.",
                        color: "#739E73",
                        timeout: 5000,
                        icon: "fa fa-check",
                    });
                    $('body').removeClass('widget-body-ajax-loading');
                    $('#contractGetValue').html(ret);
                }, fail: () => {
                    $('body').removeClass('widget-body-ajax-loading');
                    $.smallBox({
                        title: "Failed",
                        content: " 异常，请重试",
                        color: "#C46A69",

                        icon: "fa fa-warning shake animated",
                    });
                }
            });
        })

    })
</script>
