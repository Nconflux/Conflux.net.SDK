<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), dir.props))\dir.props" />
  <PropertyGroup>
    <Description>Nethereum.Unity Nethereum Unity Class Library to interact with Ethereum from Unity3d</Description>
    <AssemblyTitle>Nethereum.Unity</AssemblyTitle>
    <VersionPrefix>$(NethereumVersion)</VersionPrefix>
    <TargetFrameworks>$(UnityFrameworks)</TargetFrameworks>
    <AssemblyName>Nethereum.Unity</AssemblyName>
    <PackageId>Nethereum.Unity</PackageId>
    <PackageTags>Netherum;Unity3d;Unity;Ethereum;Blockchain;Crypto 2.0</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Nethereum.Contracts\Conflux.Contracts.csproj" />
    <ProjectReference Include="..\Nethereum.RPC\Conflux.RPC.csproj" />
    <ProjectReference Include="..\Nethereum.JsonRpc.Client\Conflux.JsonRpc.Client.csproj" />
    <ProjectReference Include="..\Nethereum.Hex\Conflux.Hex.csproj" />
    <ProjectReference Include="..\Nethereum.Signer\Conflux.Signer.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="UnityEngine">
      <HintPath>C:\Program Files\Unity\Editor\Data\Managed\UnityEngine.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
