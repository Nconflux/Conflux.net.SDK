<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), dir.props))\dir.props" />
  <PropertyGroup>
    <Description>Netherum.Parity is the extended Web3 library for Parity, including the non-generic RPC API client methods.</Description>
    <AssemblyTitle>Nethereum.Parity</AssemblyTitle>
    <VersionPrefix>$(NethereumVersion)</VersionPrefix>
    <TargetFrameworks>$(DefaultFrameworks)</TargetFrameworks>
    <AssemblyName>Nethereum.Parity</AssemblyName>
    <PackageId>Nethereum.Parity</PackageId>
    <PackageTags>Netherum;Ethereum;Blockchain;Parity</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Conflux.RPC\Conflux.RPC.csproj" />
    <ProjectReference Include="..\Conflux.Web3\Conflux.Web3.csproj" />
  </ItemGroup>

   <ItemGroup Condition=" '$(TargetFramework)' == 'net451' Or '$(TargetFramework)' == 'net461'">
    <Reference Include="System.Net.Http" />
  </ItemGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' != 'net35' And '$(TargetUnityNet461AOT)' != 'true'">
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\..\NethereumKey.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>
  <ItemGroup Condition=" '$(TargetFramework)' != 'net35' And '$(TargetUnityNet461AOT)' != 'true'">
    <None Include="..\..\NethereumKey.snk" />
  </ItemGroup>

</Project>
